import java.util.Collection;

public class Task {
    //information about Task
    private String title, description, assigne, dueDate;

    public Task(String title, String description, String assigne, String dueDate){
        this.title = title;
        this.description = description;
        this.assigne = assigne;
        this.dueDate = dueDate;
    }
    //Getter and Setter

    public String getTitle() {
        return title;
    }

    public void updateTitle(String title) {
        this.title = title;
    }

    public String getDescription() {
        return description;
    }

    public void updateDescription(String description) {
        this.description = description;
    }

    public String getAssigne() {
        return assigne;
    }

    public void updateAssigne(String assigne) {
        this.assigne = assigne;
    }

    public String getDueDate() {
        return dueDate;
    }

    public void updateDueDate(String dueDate) {
        this.dueDate = dueDate;
    }

    public void printTask() {
        System.out.println("Task Name " + title + " Description :" + description);
    }
}
